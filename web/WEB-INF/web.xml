<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>DisplayBooksServlet</servlet-name>
        <servlet-class>books.servlets.DisplayBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>books.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayBookServlet</servlet-name>
        <servlet-class>books.servlets.DisplayBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartServlet</servlet-name>
        <servlet-class>books.servlets.CartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayUsersServlet</servlet-name>
        <servlet-class>books.servlets.DisplayUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayUserServlet</servlet-name>
        <servlet-class>books.servlets.DisplayUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDatabaseServlet</servlet-name>
        <servlet-class>books.servlets.UpdateDatabaseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DisplayOrdersServlet</servlet-name>
        <servlet-class>books.servlets.DisplayOrdersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DisplayBooksServlet</servlet-name>
        <url-pattern>/displayBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayBookServlet</servlet-name>
        <url-pattern>/displayBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayUsersServlet</servlet-name>
        <url-pattern>/displayUsers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayUserServlet</servlet-name>
        <url-pattern>/displayUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDatabaseServlet</servlet-name>
        <url-pattern>/updateDatabase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayOrdersServlet</servlet-name>
        <url-pattern>/displayOrders</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
